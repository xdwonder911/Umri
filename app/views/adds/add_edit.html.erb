<h1>Your Adds</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Date add</th>
      <th>Price</th>
      <th>Img</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>




    <% #@adds.each do |add| %>
     <% #Add.where(:user_id == current_user.id).find_each do |add| %>



<% @adds.each do |add|%>
<% if current_user.id == add.user_id %>


    <tr>



        <td><%= add.name %></td>
        <td><%= add.description %></td>
        <td><%= add.date_add %></td>
        <td><%= add.price %></td>
        <td><%= add.img %></td>

<% if add.active == true  %>
        <td id="active">Active</td>
<%else %>
        <td id="inactive">Inactive</td>
<%end%>





        <td><%= link_to 'Show', add %></td>
        <td><%= link_to 'Edit', edit_add_path(add) %></td>
    
      </tr>


  
    <% end %>


<% end %>


  </tbody>
</table>




